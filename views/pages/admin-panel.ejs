<%- include("./../partials/header.ejs") %>
    <div class="container">
        <div class="admin-panel">
            <div class="add-category">
                <h2>add Category</h2>
                <form class="admin-form" action="/add-category" method="POST">
                    <input type="text" placeholder="Category" name="category" value="" maxlength="200" required>
                    <button type="submit" class="btn " id="addCategory">add</button>
                </form>
            </div>
            <div class="show-categories">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% showCategories.forEach(Category=> { %>
                            <tr>
                                <td>
                                    <%= Category.idCategory %>
                                </td>
                                <td>
                                    <%= Category.category_name %>
                                </td>
                                <td>
                                    <form action="/delete-category" method="POST">
                                        <input type="hidden" name="categoryID" value="<%= Category.idCategory %>">
                                        <button type="submit" class="red-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("./../partials/footer.ejs") %>
